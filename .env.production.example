# =============================================================================
# CISO ASSISTANT - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Domaine: rssi.ccdigital.fr
# Plateforme: Coolify + Hetzner
# Base de données: PostgreSQL externe
# =============================================================================

# -----------------------------------------------------------------------------
# DOMAINE ET URLS
# -----------------------------------------------------------------------------
DOMAIN=rssi.ccdigital.fr
CISO_ASSISTANT_URL=https://rssi.ccdigital.fr
ALLOWED_HOSTS=rssi.ccdigital.fr,backend
CSRF_TRUSTED_ORIGINS=https://rssi.ccdigital.fr
CORS_ALLOWED_ORIGINS=https://rssi.ccdigital.fr
ORIGIN=https://rssi.ccdigital.fr
PUBLIC_BACKEND_API_URL=https://rssi.ccdigital.fr/api

# -----------------------------------------------------------------------------
# DJANGO CONFIGURATION
# -----------------------------------------------------------------------------
# IMPORTANT: Générer une clé secrète unique avec:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=CHANGEZ_MOI_AVEC_UNE_CLE_SECRETE_UNIQUE_ET_LONGUE
DJANGO_DEBUG=False

# -----------------------------------------------------------------------------
# BASE DE DONNÉES POSTGRESQL (EXTERNE)
# -----------------------------------------------------------------------------
# À configurer avec les informations de votre BDD PostgreSQL Coolify/Hetzner
POSTGRES_NAME=ciso_assistant_prod
POSTGRES_USER=ciso_assistant
POSTGRES_PASSWORD=CHANGEZ_MOI_MOT_DE_PASSE_SECURISE
POSTGRES_HOST=postgres  # Nom du service PostgreSQL dans Coolify
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# CONFIGURATION EMAIL (OPTIONNEL)
# -----------------------------------------------------------------------------
# Pour l'envoi d'emails (invitations, notifications, etc.)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@rssi.ccdigital.fr
EMAIL_HOST_PASSWORD=CHANGEZ_MOI_MOT_DE_PASSE_EMAIL
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@rssi.ccdigital.fr

# -----------------------------------------------------------------------------
# SUPERUTILISATEUR PAR DÉFAUT (OPTIONNEL)
# -----------------------------------------------------------------------------
# Créé automatiquement au premier démarrage
DJANGO_SUPERUSER_EMAIL=admin@rssi.ccdigital.fr
DJANGO_SUPERUSER_PASSWORD=CHANGEZ_MOI_MOT_DE_PASSE_ADMIN
DJANGO_SUPERUSER_FIRSTNAME=Admin
DJANGO_SUPERUSER_LASTNAME=CISO

# -----------------------------------------------------------------------------
# CONFIGURATION AVANCÉE (OPTIONNEL)
# -----------------------------------------------------------------------------
# Nombre de workers Gunicorn (ajuster selon les ressources serveur)
# GUNICORN_WORKERS=4

# Timeout Gunicorn
# GUNICORN_TIMEOUT=120

# Niveau de log
# LOG_LEVEL=INFO
